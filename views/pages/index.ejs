    <% if (computers.length) { %>
    <div class="featured-product product" id="computers-index">
      <div class="container-fluid">
        <div class="section-header">
          <h1>Computer Product</h1>
        </div>
        <div class="row align-items-center product-slider product-slider-4">
          <% computers.forEach(computer => { %>
          <div class="col-lg-3">
            <div class="product-item">
              <div class="product-title">
                <a href="#"><%= computer.name %></a>
                <div class="ratting">
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                </div>
              </div>
              <div class="product-image">
                <a href="/products">
                  <img src="<%= computer.thumbnail[0] %>" alt="Product Image" />
                </a>
                <div class="product-action">
                  <a href="#"><i class="fa fa-cart-plus"></i></a>
                  <a href="#"><i class="fa fa-heart"></i></a>
                  <a href="/products/<%= computer.id %>"
                    ><i class="fa fa-search"></i
                  ></a>
                </div>
              </div>
              <div class="product-price">
                <h3><span>$</span><%= computer.salePrice %></h3>
                <a class="btn" href=""
                  ><i class="fa fa-shopping-cart"></i>Buy Now</a
                >
              </div>
            </div>
          </div>
          <% }) %>
        </div>
