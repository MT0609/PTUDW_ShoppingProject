<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <%- include('../partials/header'); %>

    <!-- Breadcrumb Start -->
    <div class="breadcrumb-wrap">
      <div class="container-fluid">
        <ul class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item"><a href="#">Products</a></li>
          <li class="breadcrumb-item active">Checkout</li>
        </ul>
      </div>
    </div>
    <!-- Breadcrumb End -->

    <!-- Checkout Start -->
    <div class="checkout">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-8">
            <div class="checkout-inner">
              <div class="billing-address">
                <h2>Billing Address</h2>
                <div class="row">
                  <div class="col-md-6">
                    <label>First Name</label>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.firstName%>"
                    />
                  </div>
                  <div class="col-md-6">
                    <label>Last Name</label>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.lastName%>"
                    />
                  </div>
                  <div class="col-md-6">
                    <label>E-mail</label>
                    <%if (user.email) {%>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.email%>"
                      disabled
                    />
                    <%}else{%>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.email%>"
                    />
                    <%}%>
                  </div>
                  <div class="col-md-6">
                    <label>Mobile No</label>
                    <%if (user.email) {%>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.phone%>"
                      disabled
                    />
                    <%}else{%>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.phone%>"
                    />
                    <%}%>
                  </div>
                  <div class="col-md-12">
                    <label>Address</label>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.address%>"
                    />
                  </div>
                  <div class="col-md-6">
                    <label>Country</label>
                    <select class="custom-select">
                      <option selected>Việt nam</option>
                    </select>
                  </div>
                  <div class="col-md-6">
                    <label>City</label>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.city%>"
                    />
                  </div>
                  <div class="col-md-6">
                    <label>District</label>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.district%>"
                    />
                  </div>
                  <!-- <div class="col-md-6">
                    <label>ZIP Code</label>
                    <input
                      class="form-control"
                      type="text"
                      placeholder="ZIP Code"
                    />
                  </div> -->
                  <%if (user.length) {%>
                  <div class="col-md-12">
                    <div class="custom-control custom-checkbox">
                      <input
                        type="checkbox"
                        class="custom-control-input"
                        id="newaccount"
                      />
                      <label class="custom-control-label" for="newaccount"
                        >Create an account</label
                      >
                    </div>
                  </div>
                  <%}%>

                  <div class="col-md-12">
                    <div class="custom-control custom-checkbox">
                      <input
                        type="checkbox"
                        class="custom-control-input"
                        id="shipto"
                      />
                      <label class="custom-control-label" for="shipto"
                        >Ship to different address</label
                      >
                    </div>
                  </div>
                </div>
              </div>

              <div class="shipping-address">
                <h2>Billing Address</h2>
                <div class="row">
                  <div class="col-md-6">
                    <label>First Name</label>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.firstName%>"
                    />
                  </div>
                  <div class="col-md-6">
                    <label>Last Name</label>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.lastName%>"
                    />
                  </div>
                  <div class="col-md-6">
                    <label>E-mail</label>
                    <%if (user.email) {%>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.email%>"
                      disabled
                    />
                    <%}else{%>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.email%>"
                    />
                    <%}%>
                  </div>
                  <div class="col-md-6">
                    <label>Mobile No</label>
                    <%if (user.email) {%>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.phone%>"
                      disabled
                    />
                    <%}else{%>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.phone%>"
                    />
                    <%}%>
                  </div>
                  <div class="col-md-12">
                    <label>Address</label>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.address%>"
                    />
                  </div>
                  <div class="col-md-6">
                    <label>Country</label>
                    <select class="custom-select">
                      <option selected>Việt nam</option>
                    </select>
                  </div>
                  <div class="col-md-6">
                    <label>City</label>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.city%>"
                    />
                  </div>
                  <div class="col-md-6">
                    <label>District</label>
                    <input
                      class="form-control"
                      type="text"
                      value="<%=user.district%>"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="checkout-inner">
              <div class="checkout-summary">
                <h1>Cart Total</h1>
                <hr />
                <%cart.items.forEach (item => {%>
                <p class="text-wrap">
                  <%=item.name%> x <%=item.quantity%><span
                    ><strong><%=item.total.toLocaleString('vi-VN')%></strong>
                  </span>
                </p>
                <br />
                <%})%>
                <hr />
                <%if (cart.items.length) {%>
                <p>
                  Shipping cost<span id="shipping-fee"
                    ><strong>25,000</strong></span
                  >
                </p>
                <%}else{%>
                <p>
                  Shipping cost<span id="shipping-fee"><strong>0</strong></span>
                </p>
                <%}%> <%if (cart) {%>
                <p>
                  Total quantity<span id="total-quantity"
                    ><strong><%=cart.totalQuantity%></strong></span
                  >
                </p>
                <%}else{%>
                <p>
                  Total quantity<span id="total-quantity"
                    ><strong>0</strong></span
                  >
                </p>
                <%}%> <%if (cart.items.length) {%>
                <h2>
                  Total payment<span id="total-payment"
                    ><strong
                      ><%=(cart.totalCost + 25000).toLocaleString('vi-VN',
                      )%></strong
                    ></span
                  >
                </h2>
                <%}else{%>
                <h2>
                  Total payment<span><strong>0</strong></span>
                </h2>
                <%}%>
              </div>

              <div class="checkout-payment">
                <div class="payment-methods">
                  <h1>Payment Methods</h1>
                  <div class="payment-method">
                    <div class="custom-control custom-radio">
                      <input
                        type="radio"
                        class="custom-control-input"
                        id="payment-1"
                        name="payment"
                      />
