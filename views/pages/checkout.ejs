                </div>
                <div class="checkout-btn">
                  <button>Place Order</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Checkout End -->

    <%- include('../partials/footer'); %> <%- include('../partials/script'); %>
  </body>
</html>
