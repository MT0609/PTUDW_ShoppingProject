<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <%- include('../partials/header'); %>

    <!-- Breadcrumb Start -->
    <div class="breadcrumb-wrap">
      <div class="container-fluid">
        <ul class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item"><a href="#">Products</a></li>
          <li class="breadcrumb-item active">Login & Register</li>
        </ul>
      </div>
    </div>
    <!-- Breadcrumb End -->

    <!-- Login Start -->
    <div class="login">
      <div class="container-fluid">
        <div class="row">
          <form
            class="col-lg-6"
            method="POST"
            action="/user/register"
            autocomplete="off"
          >
            <div class="register-form">
              <div class="row">
                <div class="col-md-6">
                  <label>First Name</label>
                  <input
                    class="form-control name"
                    type="text"
                    name="firstName"
                    value=""
                  />
                  <span class="d-none"></span>
                </div>
                <div class="col-md-6">
                  <label>Last Name</label>
                  <input
                    class="form-control name"
                    type="text"
                    name="lastName"
                    value=""
                  />
                  <span class="d-none"></span>
                </div>
                <div class="col-md-6">
                  <label>E-mail</label>
                  <input
                    class="form-control"
                    type="text"
                    name="email"
                    value=""
                  />
                  <span class="d-none"></span>
                </div>
                <div class="col-md-6">
                  <label>Mobile No</label>
                  <input
                    class="form-control"
                    type="text"
                    name="phone"
                    value=""
                  />
                  <span class="d-none"></span>
                </div>
                <div class="col-md-6">
                  <label>Password</label>
                  <input
                    class="form-control"
                    type="password"
                    name="password"
                    value=""
                  />
                  <span class="d-none"></span>
                </div>
                <div class="col-md-6">
                  <label>Retype Password</label>
                  <input
                    class="name form-control"
                    type="password"
                    name="retypePassword"
                  />
                  <span class="d-none"></span>
                </div>
                <%if(respond.success){%>
                <div style="padding: 0 0 20px 15px">
                  <span class="text-success"><%=respond.success%></span>
                </div>
                <%}%>
                <div class="col-md-12">
                  <button class="btn" type="submit">Sign up</button>
                </div>
              </div>
            </div>
          </form>
          <div class="col-lg-6" id="form-toggle">
            <form class="login-form" method="POST" action="/user/login">
              <div class="row">
                <div class="col-md-6 user-login">
                  <label>E-mail / Username</label>
                  <input
                    class="form-control"
                    type="text"
                    name="email"
                    value="<%=data.email%>"
                  />
                  <span class="d-none"></span>
                </div>
                <div class="col-md-6 user-login">
                  <label>Password</label>
                  <input class="form-control" type="password" name="password" />
                  <%if (respond.msg === "ValidatorError2" && respond.password)
                  {%>
                  <div style="font-size: 12px; margin: -10px 0 0 0">
                    <span class="text-danger"><%=respond.password%></span>
                  </div>

                  <%}%>
                </div>
                <%if(respond.msg==='ValidatorError2'){%>
                <span
                  style="font-size: 12px; margin: -10px 0 15px 15px"
                  class="text-danger"
                  ><%=respond.user%></span
                >
                <%}%>
                <div class="col-12">
                  <div class="col-2" style="padding: 0; margin-bottom: 10px">
                    <a
                      class="oauth-container btn darken-4 white black-text d-flex align-items-center"
                      href="/user/google"
                      style="text-transform: none"
                    >
                      <div class="left">
                        <img
                          width="20px"
                          style="margin-right: 8px"
                          alt="Google sign-in"
                          src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png"
                        />
                      </div>
                      Google
                    </a>
                  </div>
                </div>
                <div class="col-md-12">
                  <%if(respond.success2){%>
                  <span style="font-size: 12px; margin: 0" class="text-success"
                    ><%=respond.success2%></span
                  >
                  <%}%>
                  <div class="custom-control custom-checkbox">
                    <input
                      type="checkbox"
                      class="custom-control-input"
                      name="remember"
                      id="newaccount"
                    />
                    <label class="custom-control-label" for="newaccount"
                      >Keep me signed in.</label
                    >
                    <a
                      href=""
                      class="action-toggle"
                      style="display: inline-block"
                      >&nbsp;Forgot password?</a
                    >
                  </div>
                </div>
                <div class="col-md-12">
                  <button class="btn" type="submit">Sign in</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- Login End -->

    <%- include('../partials/footer'); %> <%- include('../partials/script'); %>
  </body>
</html>
